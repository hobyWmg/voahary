{% extends '::base.html.twig' %}

{% block header %}
    <h1>
        Entité
    </h1>
{% endblock %}

{% block content %}
    {% embed ':Embed:box.html.twig' %}
        {% block title %}
            <i class="fa fa-plus-circle"></i>
            Modification entité
        {% endblock %}
        {% block boxContent %}
            <form action="{{ path('arssam_entity_edit',{'id':entite.id}) }}" method="post" class="form-horizontal" enctype ="multipart/form-data" novalidate>
                <i class="validateTips">Tous les champs avec un astérisque (<span class="form-required" title="Ce champ est requis."> * </span>) sont obligatoires</i><br><br>
                <div class="form-group {% if form.nom.vars.errors|length %}has-error {% endif %}">
                    <label class="col-sm-2  ">{{ form_label(form.nom) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>

                <div class="form-group {% if form.abreviation.vars.errors|length %}has-error {% endif %}">
                    <label class="col-sm-2  ">{{ form_label(form.abreviation) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
                    <div class="col-sm-10">
                        {{ form_widget(form.abreviation, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.abreviation) }}
                    </div>
                </div>
                {% import ':Macro:buttons.html.twig' as buttons %}
                {% import ':Macro:formButtons.html.twig' as formButtons %}
                {{ formButtons.update() }}
                {{ buttons.back({
                    url : path('arssam_entity_list'),
                }) }}

                <div class="hide">
                    {{ form_rest(form) }}
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}