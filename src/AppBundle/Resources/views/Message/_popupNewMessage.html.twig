<div class="modal fade" id="modalNouveauMessage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div id="popupNouveauMessage" class="modal-content">
            <div class="modal-header" style="padding: 30px 30px 0px; color:#1d3399; border-radius: 10px; border: none !important;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title modal-titleh1" id="myModalLabel">Nouveau message</h4>
            </div>
            <div class="modal-body">
                <form method="post" action="{{path('arssam_message_index')}}" role="form" class="form-horizontal" autocomplete="off">
                    <div class="box-body">
                        {# <h2 class="nomargin">Nouveau message</h2> #}
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_widget(form.entiteReceiver, {'attr': {'class': 'form-control text-dark', 'placeholder': 'A : *' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_widget(form.typologie, {'attr': {'class': 'form-control text-dark'}}) }}
                            </div>
                        </div>
                        {# <div class="form-group">
                            <div class="col-md-12">
                                {{ form_widget(form.sujet, {'attr': {'class': 'form-control', 'placeholder': "Sujet : *" }}) }}
                            </div>
                        </div> #}
                        <div class="form-group">
                            <div class="col-md-3">
                                {{ form_widget(form.startDate) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.endDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_widget(form.text, {'attr': {'class': 'form-control', 'placeholder': "Texte : *"}}) }}
                            </div>
                        </div>
                       {{ form_errors(form) }}
                        {{ form_widget(form._token) }}
                        <!-- /.box-body -->
                        <div class="box-footer">
                          <div class="pull-right">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o fa-margin"></i> Envoyer</button>
                            <button type="reset" class="btn orange"><i class="fa fa-times fa-margin"></i> Annuler</button>
                          </div>

                        </div>
                        <!-- /.box-footer -->
                    </div>
                   </form>
            </div>
        </div>
    </div>
</div> 