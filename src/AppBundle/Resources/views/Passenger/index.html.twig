{% extends 'base.html.twig' %}
{% block stylesheets %}
{{parent()}}
<style>
.form-group input[type="checkbox"] {
    display: none;
}

.form-group input[type="checkbox"] + .btn-group > label span {
    width: 20px;
}

.form-group input[type="checkbox"] + .btn-group > label span:first-child {
    display: none;
}
.form-group input[type="checkbox"] + .btn-group > label span:last-child {
    display: inline-block;   
}

.form-group input[type="checkbox"]:checked + .btn-group > label span:first-child {
    display: inline-block;
}
.form-group input[type="checkbox"]:checked + .btn-group > label span:last-child {
    display: none;   
}
</style>
{% endblock %}
{% block header %}
    <h1>
       Passagers
    </h1>
{% endblock %}

{% block content %}
{% embed 'Embed/box.html.twig' %}
    {% block title %}
        <i class="fa fa-list"></i>
        Liste des passagers
     {% endblock %}
    {% block boxContent %}
	{% if passengers|length > 0 %}
	<form id="form-passenger" method="post" action="{{ path("arssam_exportxls_passenger") }}">
		<div class="[ col-xs-12 col-sm-3 ]">
			<div class="[ form-group ]">
				<input type="checkbox" name="fancy-checkbox-nationalite" id="fancy-checkbox-nationalite" autocomplete="off"/>
				<div class="[ btn-group ]">
					<label for="fancy-checkbox-nationalite" class="[ btn btn-primary ]">
						<span class="[ glyphicon glyphicon-ok ]"></span>
						<span> </span>
					</label>
					<label for="fancy-checkbox-nationalite" class="[ btn btn-default active]">
						Nationalité
					</label>
				</div>
			</div>
			<div class="[ form-group ]">
				<input type="checkbox" name="fancy-checkbox-numero" id="fancy-checkbox-numero" autocomplete="off" />
				<div class="[ btn-group ]">
					<label for="fancy-checkbox-numero" class="[ btn btn-primary ]">
						<span class="[ glyphicon glyphicon-ok ]"></span>
						<span> </span>
					</label>
					<label for="fancy-checkbox-numero" class="[ btn btn-default active ]">
						Numéro
					</label>
				</div>
			</div>
			<div class="[ form-group ]">
				<input type="checkbox" name="fancy-checkbox-nom" id="fancy-checkbox-nom" autocomplete="off" />
