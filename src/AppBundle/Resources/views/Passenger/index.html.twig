		</div>
		<div class="[ col-xs-12 col-sm-6 ]">
			<!--<button type="button" class="btn btn-success">Rechercher</button>-->
		</div>
		<div class="[ col-xs-12 col-sm-6 ]">
			<input type="submit" class="btn btn-info" value="Exporter">
		</div>
	</form>
            <table class="table table-datatable do-datatable">
                <thead>
                    <tr>
                        <th>Nationalite</th>
                        <th>Numero</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Date de naissance</th>
                        <th>Sexe</th>
                        <th>Date du voyage</th>
                        <th>Transport</th>
                        <th>Sens</th>
                        <th>Poste de frontiere</th>
                    </tr>
                </thead>
                <tbody>
                {% for passenger in passengers %}
                    <tr>
                        <td>{{ passenger.nationalite }}</td>
                        <td>{{ passenger.numero }}</td>
                        <td>{{ passenger.nom }}</td>
                        <td>{{ passenger.prenom }}</td>
                        <td>{% if passenger.dateNaissance %}{{ passenger.dateNaissance|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ passenger.sexe }}</td>
                        <td>{% if passenger.dateVoyage %}{{ passenger.dateVoyage|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ passenger.transport }}</td>
                        <td>{{ passenger.sens }}</td>
                        <td>{{ passenger.posteFrontiere }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
		<hr>
            {{ alerts.info('Pas de résultat') }}
        {% endif %}
    {% endblock %}
  {% endembed %}
{% endblock %}
