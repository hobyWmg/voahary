{% extends '::base.html.twig' %}

{% block header %}
    <h1>
        Epidémie - Cas
    </h1>
{% endblock %}

{% block content %}
    {% embed ':Embed:box.html.twig' %}
        {% block title %}
            <i class="fa fa-plus-circle"></i>
            Ajout cas pour les épidémies
        {% endblock %}
        {% block boxContent %}
            <form action="{{ action }}" method="post" class="form-horizontal" enctype ="multipart/form-data">
                <i class="validateTips">Tous les champs avec un astérisque (<span class="form-required" title="Ce champ est requis."> * </span>) sont obligatoires</i><br><br>
                <div class="form-group {% if form.titre.vars.errors|length %}has-error {% endif %}">
                    <label class="col-sm-2  ">{{ form_label(form.titre) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
                    <div class="col-sm-10">
                        {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.titre) }}
                    </div>
                </div>

                <div class="form-group {% if form.nombre.vars.errors|length %}has-error {% endif %}">
                    <label class="col-sm-2  ">{{ form_label(form.nombre) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.nombre) }}
                    </div>
                </div>
                {% import ':Macro:buttons.html.twig' as buttons %}
                {% import ':Macro:formButtons.html.twig' as formButtons %}
                {{ formButtons.create() }}
                {{ buttons.back({
                    url : path('arssam_dvsse_show', { 'id': dvsse.id }),
                }) }}

                <div class="hide">
                    {{ form_rest(form) }}
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}

