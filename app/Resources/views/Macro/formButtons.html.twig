{% macro submit(options = {}) %}
    {% set defaultParams = {
        'id'       : null,
        'btnClass' : 'btn-default',
        'name'     : 'Envoyer',
        'class'    : null,
        'title'    : null,
        'pull'     : 'left'
    } %}

    {% set params = defaultParams|merge(options) %}

    <button type="submit" class="btn {{ params.class }} {{ params.btnClass }} pull-{{ params.pull }}"
        {% if params.id is not null %} id="{{ params.id }}"{% endif %}
    >
        {{ params.name}}
    </button>
{% endmacro %}

{% macro create(options = {}) %}
    {% set defaultParams = {
        'btnClass' : 'btn-success',
        'name'     : 'Créer',
        'title'    : 'button.create',
        'pull'     : 'right'
    } %}
    {% set params = defaultParams|merge(options) %}

    {% import _self as formButtons %}
    {{ formButtons.submit(params) }}
{% endmacro %}

