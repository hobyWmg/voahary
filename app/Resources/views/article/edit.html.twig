{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="title">Article edit</h1>
    <div class="bg-content">
    {{ form_start(form) }}
        <div class="row form-group {% if form.titre.vars.errors|length %}has-error {% endif %}">
                        <label class="col-sm-2  ">{{ form_label(form.titre) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.titre) }}
                        </div>
        </div>
        <div class="row form-group">
                        <label class="col-sm-2  ">{{ form_label(form.contenue) }} </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.contenue, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.contenue) }}
                        </div>
            </div>
            <div class=" row form-group">
                    <label class="col-sm-2">
                       {{ form_label(form.image.filePhoto) }}
                   </label>
                    <div class="col-sm-6">
                        <div class="fileinput fileinput-{% if article is defined and article.image.photo is not null %}exists{% else %}new{% endif %}" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="width: 100px; height: 100px;">
                                <img class="imageSource" data-src="holder.js/100%x100%" src="{{ asset(default_photo) }}" alt="">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;">
                                {% if article is defined and article.image.photo is not null %}
                                    <img class="imageSource" style="width: 100px; height: auto" data-src="holder.js/100%x100%" src="{{ asset(article.image.webPath ~ article.image.photo) }}" alt="">
                                {% endif %}
                            </div>
                            <div>
                                <span class="btn btn-default btn-file btn-flat">
                                    <span class="fileinput-new">Choisir une image</span>
                                    <span class="fileinput-exists">Changer</span>
                                    {{ form_widget(form.image.filePhoto, {'attr': {'accept': 'image/*'}}) }}
                                </span>
                                <a href="#" id="delete-photo" data-id="{{ article.id }}" data-type="1" class="btn btn-warning" data-dismiss="fileinput">Supprimer</a>
                            </div>
                        </div>
                        <p class="note-image"><small>Note: Ajouter une photo au format jpg / jpeg / png</small></p>
                    </div>
                    <div class="col-sm-4">
                       {{ form_errors(form.image.filePhoto) }}
                   </div>
                </div>
        {# {{ form_widget(form) }} #}
        <input type="submit" value="Edit" />
    {{ form_end(form) }}
    </div>
{% endblock %}
