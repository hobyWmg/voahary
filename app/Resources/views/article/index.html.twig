{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="title">Articles list</h1>
    <a class="btn btn-success btn-add" href="{{ path('article_new') }}">Ajouter</a>
    <div class="bg-content">
        <table class="table table-datatable table-hover">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>Titre</th>
                    <th width="60%">Contenue</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    {# <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td> #}
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenue|truncate(200)|raw }}</td>
                    <td>
                        <ul>
                            <li>
                            <a href="javascript:void(0)" class='delete-btn' data-url="{{path('article_delete', { 'id':article.id  } )  }}" ><i class="fa fa-trash"></i></a>
                            </li>
                            <li>
                                <a href="{{ path('article_edit', { 'id': article.id }) }}"><i class="fa fa-edit"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
