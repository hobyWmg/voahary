<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Voahary - Handmade!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/bootstrap/css/bootstrap.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/css/front/style.css')}}" >
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/owlcarousel/owl.carousel.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/owlcarousel/owl.theme.default.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/animate/css/animations.css')}}">
        <link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
        <style>
            #footer {
            background-image: -moz-linear-gradient(to top, rgba(255, 233, 151, 0.6), rgba(255, 233, 151, 0.6)), url("{{asset('bundles/app/images/banner2.jpg')}}");
            background-image: -webkit-linear-gradient(to top, rgba(255, 233, 151, 0.6), rgba(255, 233, 151, 0.6)), url("{{asset('bundles/app/images/banner2.jpg')}}");
            background-image: linear-gradient(to top, rgba(255, 233, 151, 0.6), rgba(255, 233, 151, 0.6)), url("{{asset('bundles/app/images/banner2.jpg')}}");
            background-attachment: fixed;
            background-position: center center;
            background-size: cover;
            padding: 12em 0 2em;
            }
            body{
    overflow-x: hidden;
  }
.slide{
  height: 500px;
}
.owl-item > div{
  background-size: cover;
  background-position: center;
  height: 500px;
  text-align: center;
  padding-top: 150px;
}
.owl-dots{
  display: flex;
  display:-ms-flexbox;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;

}
.owl-dot{
  display: block;
  width: 16px;
  height: 16px;
  border-radius: 16px;
  margin: 5px;
  background: #bbb !important;
}
.owl-dots button.active {
  background: transparent !important;
  border: solid 1px #bbb;
}
.nav-bar ul{
  display: inline-flex;
  list-style: none;
  margin-top: 30px;
}
.nav-bar ul a{
  text-decoration: none;
  color:#fff !important;
}
.nav-bar ul li{
  margin-right: 15px;
}
.with-background{
  background-color: #d3a62a !important;
  /* border-bottom: solid 1px #39a288; */
}
.with-background .logo {
  margin-left: 40px;
  -moz-transition: width 2s;
 -webkit-transition: width 2s;
 -ms-transition: width 2s;
 transition: width 2s;
}
.timeline .image img{
  width: 250px;
  height: auto;
}
.header-interne{
  background-color: #FFD700 !important;
  height:100px !important;
}
.content-interne{
  /*background-color:#eae3e342;*/
  padding: 30px;
  text-align: center;
  justify-content: center;
}
h1,h2{
  color: #d3a62a !important;
}
.owl-item img{
  max-height: 100%;
  width: auto !important;
}
        </style>
        {% endblock %}
    </head>
    <body>
        <header id="header" class="alt animatedParent header-interne">
	<span class="logo animated growIn slowest">
		<a href="{{path('homepage')}}"><img src="{{asset('bundles/app/images/voahary-white.png')}}"></a>
	</span>
	        <div class="nav-bar animated bounceInDown">
            <ul class="clearfix">
              <li> <a href="{{path('voahary_all_produits')}}">Nos produits</a>  </li>
              {# <li class="active">
                <a href="#two">Nos atouts</a> 
              </li>
              <li> <a href="#four">Ev√®nement</a>  </li> #}
              <li>
                <a href="javascript:void(0);" onClick="goToTarget('footer')">Nous contacter</a> 
                <span class="download"></span> 
              </li>
            </ul>
          </div>
	</header>
<section id="three" class="wrapper animatedParent">
<div class="content-interne">
  {% block body %}
  {% endblock %}
  </div>
</section>


<footer id="footer" class="animatedParent">
  {{ render(controller('AppBundle:Front:footer')) }}
</footer>


{% block javascripts %}

        <script src="{{asset('bundles/app/plugins/jquery/jquery-3.2.1.min.js')}}"></script>
        <script src="{{asset('bundles/app/bootstrap/js/bootstrap.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/owlcarousel/owl.carousel.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/owlcarousel/owlThumbs.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/animate/js/css3-animate-it.js')}}"></script>
        <script type="text/javascript">	
        $(document).ready(function(){
        $('.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            items:1,
            autoplay:false,
            autoplayHoverPause:true,
            nav:false,
            transitionStyle : "fade",
            thumbs: true,
            thumbImage: true,
            thumbContainerClass: 'owl-thumbs',
            thumbItemClass: 'owl-thumb-item',
            dots: false
        })
        $(function(){
            $(window).scroll(function(){
                var aTop = $('#top').height();
                if($(this).scrollTop()>=aTop){
                    $("#header").addClass("with-background");
                }else{
                    $("#header").removeClass("with-background");
                }
            });
            // var config = {
            // viewFactor : 0.15,
            // duration   : 1200,
            // distance   : "100px",
            // origin: 'top',
            // scale: 0,
            // mobile: true,
            // }

            // window.sr = new ScrollReveal(config)
            // sr.reveal('.animated');
            // sr.reveal('.major');
            // sr.reveal('.stcode_title6');
            // sr.reveal('.logo_image',{duration: 300, delay:80}, 100);
            // sr.reveal('.one_half', 200);
            // sr.reveal('.one_half', { origin: 'left', distance:'300px' });
            // sr.reveal('.one_half.last', { origin: 'right', distance:'300px' });
        });
        function goToTarget(target){
              $('html, body').animate({
                scrollTop: $(".section_"+target).offset().top
              }, 1000)
          }
})
        var route = "{{path('voahary_all_produits')}}";
        $("#search").keyup(function(){
          var val =$(this).val();
          if(val.length >=4){
                $.ajax({
                      type: "POST",
                      data: {'search':val},
                      dataType: "html",
                      url: route,
                      cache: false,
                      success: function(data){
                          $("#tata").html(data);
                      },
                      error:function(jqXHR, textStatus, errorThrown) {
                          console.log("Error: "+textStatus+" "+errorThrown);
                      }
                 });
          }else if(val.length==0){
           $.ajax({
                      type: "POST",
                      data: {'search':val},
                      dataType: "html",
                      url: route,
                      cache: false,
                      success: function(data){
                          $("#tata").html(data);
                      },
                      error:function(jqXHR, textStatus, errorThrown) {
                          console.log("Error: "+textStatus+" "+errorThrown);
                      }
                 });
          }
            
        });
        
        </script>
        {% endblock %}
    </body>
</html>
