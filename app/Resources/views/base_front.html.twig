            // sr.reveal('.one_half', { origin: 'left', distance:'300px' });
            // sr.reveal('.one_half.last', { origin: 'right', distance:'300px' });
        });
           
})
function goToTarget(target){
              $('html, body').animate({
                scrollTop: $(".section_"+target).offset().top
              }, 1000)
          }
        </script>
        {% endblock %}
