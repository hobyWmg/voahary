</section>

<section id="four" class="section_four wrapper style2 alt ">
 	{{ render(controller('AppBundle:Front:event')) }}
</section>

<footer id="footer" class="section_footer animatedParent">
  {{ render(controller('AppBundle:Front:footer')) }}
</footer>

{% endblock %}
{% block javascripts %}

        <script src="{{asset('bundles/app/plugins/jquery/jquery-3.2.1.min.js')}}"></script>
        <script src="{{asset('bundles/app/bootstrap/js/bootstrap.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/owlcarousel/owl.carousel.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/animate/js/css3-animate-it.js')}}"></script>
        <script type="text/javascript">	
        $(document).ready(function(){
        
        $('.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            items:1,
            autoplay:true,
            autoplayHoverPause:true,
            nav:false,
            transitionStyle : "fade",
            autoplaySpeed:800,
            navSpeed:3000,
        })
        $(function(){
            $(window).scroll(function(){
                var aTop = $('#top').height();
                if($(this).scrollTop()>=aTop){
                    $("#header").addClass("with-background");
                    $("#first").addClass('hide');
                    $("#second").removeClass('hide');
                }else{
                    $("#header").removeClass("with-background");
                    $("#first").removeClass('hide');
                    $("#second").addClass('hide');
                }
            });
