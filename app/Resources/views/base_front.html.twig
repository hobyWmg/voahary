        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/css/front/style.css')}}" >
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/owlcarousel/owl.carousel.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/owlcarousel/owl.theme.default.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/plugins/animate/css/animations.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/fonts/font-awesome.css')}}">
        <style>
            body{
    overflow-x: hidden;
  }
.slide{
  height: 500px;
}
.owl-item > div{
  background-size: 120%;
  background-position: center;
  background-repeat:no-repeat;
  height: 500px;
  text-align: center;
  padding-top: 150px;
}
.owl-dots{
  display: flex;
  display:-ms-flexbox;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;

}
.owl-dot{
  display: block;
  width: 16px;
  height: 16px;
  border-radius: 16px;
  margin: 5px;
  background: #bbb !important;
}
.owl-dots button.active {
  background: transparent !important;
  border: solid 1px #bbb;
}
.owl-item.active > div {
    background-size : 100%;
    -webkit-transition-property: background-size;
    -webkit-transition-duration: 20s;
    transition-property: background-size;
    transition-duration: 20s;
}
.nav-bar ul{
  display: inline-flex;
  list-style: none;
  margin-top: 30px;
}
.nav-bar ul a{
  text-decoration: none;
  color: #1d8d7d !important
}
.nav-bar ul li{
  margin-right: 15px;
}
.with-background{
  background-color: #FFD700 !important;
  /* border-bottom: solid 1px #39a288; */
}
.with-background .logo {
  margin-left: 40px;
  -moz-transition: width 2s;
 -webkit-transition: width 2s;
 -ms-transition: width 2s;
 transition: width 2s;
}
.with-background .nav-bar ul a{
  color : #fff !important
}
.timeline .image img{
  width: 250px;
  height: auto;
}
#plus-produit{
  float: right;
background-color: #1d8d7d;
padding: 10px;
text-decoration: none;
cursor: pointer;
border-radius: 10px 0px 0px 10px;
color: #fff;
top: -4rem;
position: relative;
}
        </style>
        {% endblock %}
    </head>
    <body>
