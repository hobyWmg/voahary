	<span id="first" class="logo animated growIn slowest" style="margin-top:15px;height:50px;">
    <a href="#"><img src="{{asset('bundles/app/images/logo.png')}}"></a>
	</span>
  <span id="second" class="logo animated growIn bounceInLeft hide">
    <a href="#" ><img src="{{asset('bundles/app/images/voahary-white.png')}}"></a>
	</span>
  
	<div class="nav-bar animated bounceInDown">
            <ul class="clearfix">
              <li> <a href="javascript:void(0);" onClick="goToTarget('one')">Nos produits</a>  </li>
              <li class="active">
                <a href="javascript:void(0);" onClick="goToTarget('two')">Nos atouts</a> 
              </li>
              <li> <a href="javascript:void(0);" onClick="goToTarget('three')">Ev√©nements</a>  </li>
              <li>
                <a href="javascript:void(0);" onClick="goToTarget('footer')">Nous contacter</a> 
                <span class="download"></span> 
              </li>
            </ul>
          </div>
	</header>
