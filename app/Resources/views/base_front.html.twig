<section id="top">
	{{ render(controller('AppBundle:Front:carousel')) }}
</section>

<section id="one" class="section_one wrapper style2 animatedParent animateOnce">
	<div class="inner  ">
		<section class="spotlights">
		{{ render(controller('AppBundle:Front:produitList')) }}
	</section>	
  </div>
  <a id="plus-produit" class="animated bounceInRight " href="{{path('voahary_all_produits')}}">Voir plus</a>
</section>

<section id="two" class="section_two wrapper style1 special  animatedParent go">
