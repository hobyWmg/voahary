{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="title">Carousel creation</h1>
    <div class="bg-content">
        {{ form_start(form) }}
            <div class="row form-group {% if form.titre.vars.errors|length %}has-error {% endif %}">
                        <label class="col-sm-2  ">{{ form_label(form.titre) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.titre) }}
                        </div>
        </div>
        <div class="row form-group">
                        <label class="col-sm-2  ">{{ form_label(form.description) }} </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.description) }}
                        </div>
        </div>
        <div class="row form-group">
                    <label class="col-sm-2">
                        {{ form_label(form.fileImage) }}
                    </label>
                    <div class="col-sm-6">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="width: 100px; height: 100px;">
                                <img class="imageSource" data-src="holder.js/100%x100%" src="{{ asset(default_photo) }}" alt="">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;">
                               {# {% if praticien is defined and praticien.photo is not null %}
                                    <img class="imageSource" style="width: 100px; height: auto" data-src="holder.js/100%x100%" src="{{ asset(praticien.webPath ~ praticien.photo) }}" alt="">
                                {% endif %}#}
                            </div>
                            <div>
                                <span class="btn btn-default btn-file btn-flat">
                                    <span class="fileinput-new">Choisir une image</span>
                                    <span class="fileinput-exists">Changer</span>
                                    {{ form_widget(form.fileImage, {'attr': {'accept': 'image/*'}}) }}
                                </span>
                                <a href="#"  class="btn btn-warning" data-dismiss="fileinput">Supprimer</a>
                            </div>
                        </div>
                        <p class="note-image"><small>Note: Ajouter une photo au format jpg / jpeg / png</small></p>
                    </div>
                    <div class="col-sm-4">
                        {{ form_errors(form.fileImage) }}
                    </div>
                </div>
            <input type="submit" value="Create" />
            <div class="hide">{{form_rest(form)}}</div>
        {{ form_end(form) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('voaharyadmin_carousel_index') }}">Retour</a>
        </li>
    </ul>
{% endblock %}
