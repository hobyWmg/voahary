{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="title">Parametre edit</h1>
    <div class="bg-content">
    {{ form_start(form) }}
        <div class="row form-group {% if form.adresse.vars.errors|length %}has-error {% endif %}">
            <label class="col-sm-2  ">{{ form_label(form.adresse) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
            <div class="col-sm-10">
                {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.adresse) }}
            </div>
        </div>
        <div class="row form-group {% if form.phone.vars.errors|length %}has-error {% endif %}">
            <label class="col-sm-2  ">{{ form_label(form.phone) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
            <div class="col-sm-10">
                {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.phone) }}
            </div>
        </div>
        <div class="row form-group {% if form.email.vars.errors|length %}has-error {% endif %}">
            <label class="col-sm-2  ">{{ form_label(form.email) }} <span class="form-required" title="Ce champ est requis.">*</span></label>
            <div class="col-sm-10">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class=" row form-group">
                    <label class="col-sm-2">
                       {{ form_label(form.imageFondContact) }}
                   </label>
                    <div class="col-sm-6">
                        <div class="fileinput fileinput-{% if parametre is defined and parametre.imageFondContact is not null %}exists{% else %}new{% endif %}" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="width: 100px; height: 100px;">
                                <img class="imageSource" data-src="holder.js/100%x100%" src="{{ asset(default_photo) }}" alt="">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;">
                                {% if parametre is defined and parametre.imageFondContact is not null %}
                                    <img class="imageSource" style="width: 100px; height: auto" data-src="holder.js/100%x100%" src="{{ asset(parametre.imageFondContact.webPath ~ parametre.imageFondContact.photo) }}" alt="">
                                {% endif %}
                            </div>
                            <div>
                                <span class="btn btn-default btn-file btn-flat">
                                    <span class="fileinput-new">Choisir une image</span>
                                    <span class="fileinput-exists">Changer</span>
                                    {{ form_widget(form.imageFondContact, {'attr': {'accept': 'image/*'}}) }}
                                </span>
                                <a href="#" id="delete-photo" data-id="{{ parametre.id }}" data-type="1" class="btn btn-warning" data-dismiss="fileinput">Supprimer</a>
                            </div>
                        </div>
                        <p class="note-image"><small>Note: Ajouter une photo au format jpg / jpeg / png</small></p>
                    </div>
                    <div class="col-sm-4">
                       {{ form_errors(form.imageFondContact) }}
                   </div>
                </div>
        <input type="submit" value="Edit" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('parametre_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
{% endblock %}
