{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parametre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parametre.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ parametre.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ parametre.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ parametre.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parametre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parametre_edit', { 'id': parametre.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
